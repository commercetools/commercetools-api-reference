type: base
displayName: shopping-list
description: shopping-lists e.g. for wishlist support
get:
  description: Query shopping-lists
  is:
    - query:
        whereExample: key = "my-shopping-list"
    - sortable:
        sortExample: createdAt asc
    - paging
    - expandable
  securedBy: [oauth_2_0: {scopes: ["manage_project:{projectKey}", "view_shopping-lists:{projectKey}"]}]
  responses:
    200:
      body:
        application/json:
          example: !include examples/shopping-lists.example.json
          type: ShoppingListPagedQueryResponse
post:
  description: Create a shopping-list
  is:
    - expandable
  securedBy: [oauth_2_0: {scopes: ["manage_project:{projectKey}", "manage_shopping-lists:{projectKey}"]}]
  body:
    application/json:
      example: !include examples/shopping-list-create.example.json
      type: ShoppingListDraft
  responses:
    201:
      body:
        application/json:
          example: !include examples/shopping-list.example.json
          type: ShoppingList
/key={key}:
  type: baseByKey
  displayName: shopping-list
  get:
    description: Get shopping-list by key
    is:
      - expandable
    securedBy: [oauth_2_0: {scopes: ["manage_project:{projectKey}", "view_shopping_lists:{projectKey}"]}]
    responses:
      200:
        body:
          application/json:
            example: !include examples/shopping-list.example.json
            type: ShoppingList
  post:
    description: Update a shopping-list by key
    is:
      - conflicting
      - expandable
    securedBy: [oauth_2_0: {scopes: ["manage_project:{projectKey}", "manage_shopping_lists:{projectKey}"]}]
    body:
      application/json:
        example: !include examples/shopping-list-update.example.json
        type: Update
    responses:
      200:
        body:
          application/json:
            example: !include examples/shopping-list.example.json
            type: ShoppingList
  delete:
    description: Delete a shopping-list by key
    is:
      - versioned
      - conflicting
      - expandable
    securedBy: [oauth_2_0: {scopes: ["manage_project:{projectKey}", "manage_shopping_lists:{projectKey}"]}]
    responses:
      200:
        body:
          application/json:
            example: !include examples/shopping-list.example.json
            type: ShoppingList
/{ID}:
  type: baseById
  displayName: shopping-list
  get:
    description: Get shopping-list by ID
    is:
      - expandable
    securedBy: [oauth_2_0: {scopes: ["manage_project:{projectKey}", "view_shopping_lists:{projectKey}"]}]
    responses:
      200:
        body:
          application/json:
            example: !include examples/shopping-list.example.json
            type: ShoppingList
  post:
    description: Update a shopping-list
    is:
      - conflicting
      - expandable
    securedBy: [oauth_2_0: {scopes: ["manage_project:{projectKey}", "manage_shopping_lists:{projectKey}"]}]
    body:
      application/json:
        example: !include examples/shopping-list-update.example.json
        type: Update
    responses:
      200:
        body:
          application/json:
            example: !include examples/shopping-list.example.json
            type: ShoppingList
  delete:
    description: Delete a shopping-list
    is:
      - versioned
      - conflicting
      - expandable
    securedBy: [oauth_2_0: {scopes: ["manage_project:{projectKey}", "manage_shopping_lists:{projectKey}"]}]
    responses:
