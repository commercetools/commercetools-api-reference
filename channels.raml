#%RAML 1.0 Resource
type: base
displayName: channel
description: Channels represent a source or destination of different entities. They can be used to model warehouses or stores.
get:
  description: Query channels
  is:
    - query:
        whereExample: key = "berlin-store"
    - sortable:
        sortExample: createdAt asc
    - paging
    - expandable
  securedBy: [oauth_2_0: {scopes: ["manage_project:{projectKey}", "view_products:{projectKey}"]}]
  responses:
    200:
      body:
        application/json:
          example: !include examples/channels.example.json
post:
  description: Create a channel
  is:
    - expandable
  securedBy: [oauth_2_0: {scopes: ["manage_project:{projectKey}", "manage_products:{projectKey}"]}]
  body:
    application/json:
      example: !include examples/channel-create.example.json
      type: ChannelDraft
  responses:
    201:
      body:
        application/json:
          example: !include examples/channel.example.json
          type: Channel
/{ID}:
  type: baseById
  displayName: channel
  get:
    is:
      - expandable
    description: Get channel by ID
    securedBy: [oauth_2_0: {scopes: ["manage_project:{projectKey}", "view_products:{projectKey}"]}]
    responses:
      200:
        body:
          application/json:
            example: !include examples/channel.example.json
            type: Channel
  post:
    description: Update a channel
    is:
      - conflicting
      - expandable
    securedBy: [oauth_2_0: {scopes: ["manage_project:{projectKey}", "manage_products:{projectKey}"]}]
    body:
      application/json:
        example: !include examples/channel-update.example.json
        type: Update
    responses:
      200:
        body:
          application/json:
            example: !include examples/channel.example.json
            type: Channel
  delete:
    description: Delete a channel
    is:
      - versioned
      - conflicting
      - expandable
    securedBy: [oauth_2_0: {scopes: ["manage_project:{projectKey}", "manage_products:{projectKey}"]}]
    responses:
      200:
        body:
          application/json:
            example: !include examples/channel.example.json
            type: Channel
