meta {
  name: Query Payment Integrations
  type: http
  seq: 4
}

get {
  url: {{apiUrl}}/{{project-key}}/payment-integrations
  body: none
  auth: inherit
}


query {
  ~sort: 
  ~limit: 
  ~offset: 
  ~withTotal: 
}

script:post-response {
  var data = res.body;
  if(res.status == 200 || res.status == 201) {
      if(data.results && data.results[0] && data.results[0].id && data.results[0].version){
          bru.setEnvVar("payment-integration-id", data.results[0].id); 
          bru.setEnvVar("payment-integration-version", data.results[0].version);
      }
      if(data.results && data.results[0] && data.results[0].key){
          bru.setEnvVar("payment-integration-key", data.results[0].key); 
      }
      if(data.version){
          bru.setEnvVar("payment-integration-version", data.version);
      }
      if(data.id){
          bru.setEnvVar("payment-integration-id", data.id); 
      }
      if(data.key){
          bru.setEnvVar("payment-integration-key", data.key);
      }

  }
}

assert {
  res.status: in [200, 201]
}
