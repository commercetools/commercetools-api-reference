{
  "$schema": "http://json-schema.org/draft-04/schema#",

  "title": "Category Update Command",
  "type": "object",

  "required": ["version", "actions"],

  "properties": {
    "version": {
      "$ref": "version-update.schema.json"
    },
    "actions": {
      "type": "array",

      "items": {
        "title": "Action",
        "type": "object",

        "oneOf": [{
          "title": "changeName",
          "type": "object",

          "required": ["action", "name"],

          "properties": {
            "action": {
              "type": "string",
              "enum": ["changeName"]
            },
            "name": {"$ref": "localized-string.schema.json"}
          }
        }, {
          "title": "changeSlug",
          "type": "object",

          "required": ["action", "slug"],

          "properties": {
            "action": {
              "type": "string",
              "enum": ["changeSlug"]
            },
            "slug": {"$ref": "localized-string-slug.schema.json"}
          }
        }, {
          "title": "setDescription",
          "type": "object",

          "required": ["action", "description"],

          "properties": {
            "action": {
              "type": "string",
              "enum": ["setDescription"]
            },
            "description": {"$ref": "localized-string.schema.json"}
          }
        }, {
          "title": "changeParent",
          "type": "object",
          "description": "Changing parents should not be done concurrently. Concurrent changes of parent categories might currently lead to corrupted ancestor lists (paths).",

          "required": ["action", "parent"],

          "properties": {
            "action": {
              "type": "string",
              "enum": ["changeParent"]
            },
            "parent": {"$ref": "reference-category.schema.json"}
          }
        }, {
          "title": "changeOrderHint",
          "type": "object",

          "required": ["action", "orderHint"],

          "properties": {
            "action": {
              "type": "string",
              "enum": ["changeOrderHint"]
            },
            "orderHint": {
              "type": "string",
              "description": "An attribute as base for a custom category order in one level",
              "pattern": "^0\\.\\d+$"
            }
          }
        }, {
          "title": "setExternalId",
          "type": "object",
          "description": "Sets a new ID which can be used as additional identifier for external Systems like CRM or ERP.",

          "required": ["action"],

          "properties": {
            "action": {
              "type": "string",
              "enum": ["setExternalId"]
            },
            "externalId": {
              "type": "string",
              "description": "Optional ID defined in some external system. If not defined, the external ID is unset"
            }
          }
        }, {
          "title": "setMetaTitle",
          "type": "object",
          "description": "Sets a meta title.",

          "required": ["action"],

          "properties": {
            "action": {
              "type": "string",
              "enum": ["setMetaTitle"]
            },
            "metaTitle": {"$ref": "localized-string.schema.json"}
          }
        }, {
          "title": "setMetaDescription",
          "type": "object",
          "description": "Sets a meta description.",

          "required": ["action"],

          "properties": {
            "action": {
              "type": "string",
              "enum": ["setMetaDescription"]
            },
            "metaDescription": {"$ref": "localized-string.schema.json"}
          }
        }, {
          "title": "setMetaKeywords",
          "type": "object",
          "description": "Sets meta keywords.",

          "required": ["action"],

          "properties": {
            "action": {
              "type": "string",
              "enum": ["setMetaKeywords"]
            },
            "metaKeywords": {"$ref": "localized-string.schema.json"}
          }
        }]
      }
    }
  }
}
