{
  "$schema":"http://json-schema.org/draft-04/schema#",
  "title":"Category",
  "type":"object",
  "required":["id","version","name","slug","createdAt","lastModifiedAt","ancestors"],
  "properties":{
    "id":{
      "$ref":"schemas/id.schema.json"
    },
    "version":{
      "$ref":"schemas/version.schema.json"
    },
    "name":{
      "$ref":"schemas/localized-string.schema.json"
    },
    "slug":{
      "$ref":"schemas/localized-string-slug.schema.json"
    },
    "description":{
      "$ref":"schemas/localized-string.schema.json"
    },
    "ancestors":{
      "type":"array",
      "items":{
        "$ref":"schemas/reference-category.schema.json"
      }
    },
    "parent":{
      "$ref":"schemas/reference-category.schema.json"
    },
    "orderHint":{
      "type":"string",
      "description":"An attribute as base for a custom category order in one level",
      "pattern":"^0\\.\\d+$"
    },
    "externalId":{
      "$ref":"schemas/external-id.schema.json"
    },
    "createdAt":{
      "$ref":"schemas/created-at.schema.json"
    },
    "lastModifiedAt":{
      "$ref":"schemas/last-modified-at.schema.json"
    }
  }
}
