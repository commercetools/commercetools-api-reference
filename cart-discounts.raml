type: base
displayName: cart-discount
description: Cart discounts are used to change the prices of different elements within a cart.
get:
  description: Query cart-discounts
  is:
    - query:
        whereExample: isActive = true
    - sortable:
        sortExample: createdAt asc
    - paging
    - expandable
  securedBy: [oauth_2_0: {scopes: ["manage_project:{projectKey}", "view_orders:{projectKey}"]}]
  responses:
    200:
      body:
        application/json:
          example: !include examples/cart-discounts.example.json
          type: CartDiscountPagedQueryResponse
post:
  description: Create a cart-discount
  is:
    - expandable
  securedBy: [oauth_2_0: {scopes: ["manage_project:{projectKey}", "manage_orders:{projectKey}"]}]
  body:
    application/json:
      example: !include examples/cart-discount-create.example.json
  responses:
    201:
      body:
        application/json:
          example: !include examples/cart-discount.example.json
          type: CartDiscount
/{ID}:
  type: baseById
  is:
    - expandable
  displayName: cart-discount
  get:
    description: Get cart-discount by ID
    securedBy: [oauth_2_0: {scopes: ["manage_project:{projectKey}", "view_orders:{projectKey}"]}]
    responses:
      200:
        body:
          application/json:
            example: !include examples/cart-discount.example.json
            type: CartDiscount
  post:
    description: Update a cart-discount
    is:
      - conflicting
      - expandable
    securedBy: [oauth_2_0: {scopes: ["manage_project:{projectKey}", "manage_orders:{projectKey}"]}]
    body:
      application/json:
        example: !include examples/cart-discount-update.example.json
        type: Update
    responses:
      200:
        body:
          application/json:
            example: !include examples/cart-discount.example.json
            type: CartDiscount
  delete:
    description: Delete a cart-discount
    is:
      - versioned
      - conflicting
      - expandable
    securedBy: [oauth_2_0: {scopes: ["manage_project:{projectKey}", "manage_orders:{projectKey}"]}]
    responses:
      200:
        body:
          application/json:
            example: !include examples/cart-discount.example.json
            type: CartDiscount
