<?xml version="1.0" encoding="UTF-8" ?>
<ruleset xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:noNamespaceSchemaLocation="https://raw.githubusercontent.com/commercetools/rmf-codegen/main/ctp-validators/src/main/resources/ruleset.xsd">
    <name>default</name>
    <rules>
        <rule>
            <name>com.commercetools.rmf.validators.ResourcePluralRule</name>
            <options>
              <option type="exclude">context</option>
              <option type="exclude">page</option>
              <option type="exclude">preview</option>
              <option type="exclude">action</option>
              <option type="exclude">frontastic</option>
            </options>
        </rule>
        <rule>
            <name>com.commercetools.rmf.validators.CamelCaseRule</name>
        </rule>
        <rule>
            <name>com.commercetools.rmf.validators.FilenameRule</name>
        </rule>
        <rule>
            <name>com.commercetools.rmf.validators.DomainTypeNameRule</name>
        </rule>
        <rule>
            <name>com.commercetools.rmf.validators.UpdateActionNameRule</name>
        </rule>
        <rule>
            <name>com.commercetools.rmf.validators.PropertyPluralRule</name>
        </rule>
        <rule>
            <name>com.commercetools.rmf.validators.StringPropertySingularRule</name>
        </rule>
        <rule>
            <name>com.commercetools.rmf.validators.NamedStringEnumRule</name>
        </rule>
        <rule>
            <name>com.commercetools.rmf.validators.PackageDefinedRule</name>
        </rule>
        <rule>
            <name>com.commercetools.rmf.validators.PostBodyRule</name>
        </rule>
        <rule>
            <name>com.commercetools.rmf.validators.SuccessBodyRule</name>
        </rule>
        <rule>
            <name>com.commercetools.rmf.validators.QueryParameterCamelCaseRule</name>
        </rule>
        <rule>
            <name>com.commercetools.rmf.validators.UnionTypePropertyRule</name>
            <options>
                <option type="exclude">//</option>
            </options>
        </rule>
        <rule>
            <name>com.commercetools.rmf.validators.DiscriminatorParentRule</name>
        </rule>
        <rule>
            <name>com.commercetools.rmf.validators.ResourceCatchAllRule</name>
        </rule>
        <rule>
            <name>com.commercetools.rmf.validators.UriParameterDeclaredRule</name>
        </rule>
        <rule>
            <name>com.commercetools.rmf.validators.ResourceLowerCaseHyphenRule</name>
        </rule>
        <rule>
            <name>com.commercetools.rmf.validators.NestedTypeRule</name>
        </rule>
        <rule>
            <name>com.commercetools.rmf.validators.AsMapRule</name>
        </rule>
        <rule>
          <name>com.commercetools.rmf.validators.QueryParameterPlaceholderAnnotationRule</name>
        </rule>
    </rules>
</ruleset>
